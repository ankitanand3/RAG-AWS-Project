{
  "family": "rag-qa-system",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "qdrant",
      "image": "qdrant/qdrant:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6333,
          "protocol": "tcp"
        },
        {
          "containerPort": 6334,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "qdrant-storage",
          "containerPath": "/qdrant/storage"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:6333/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/rag-qa-system",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "qdrant"
        }
      }
    },
    {
      "name": "rag-api",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/rag-qa-system:latest",
      "essential": true,
      "dependsOn": [
        {
          "containerName": "qdrant",
          "condition": "HEALTHY"
        }
      ],
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "QDRANT_URL",
          "value": "http://localhost:6333"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "EMBEDDING_MODEL",
          "value": "text-embedding-3-large"
        },
        {
          "name": "COLLECTION_NAME",
          "value": "rag_documents"
        },
        {
          "name": "LANGSMITH_TRACING",
          "value": "true"
        },
        {
          "name": "LANGSMITH_ENDPOINT",
          "value": "https://api.smith.langchain.com"
        },
        {
          "name": "LANGSMITH_PROJECT",
          "value": "rag-qa-production"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:rag-qa/openai-api-key"
        },
        {
          "name": "LANGSMITH_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:rag-qa/langsmith-api-key"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import httpx; httpx.get('http://localhost:8000/health')\" || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/rag-qa-system",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "rag-api"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "qdrant-storage",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-XXXXXXXXX",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "iam": "ENABLED"
        }
      }
    }
  ]
}
